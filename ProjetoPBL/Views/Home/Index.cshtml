@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Página Inicial";
}

@section Styles {
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
}

<body>
    @section Header{
        <header>
            <nav class="navbar-custom">
                <h2 class="logo"><a asp-controller="Home" asp-action="Index">MAGITECH</a></h2>
                <ul>
                    <li>
                        <a asp-controller="Home" asp-action="Index">
                            Home
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Sensor" asp-action="Index">
                            🔧 Gerenciar Sensores
                        </a>
                    </li>
                    <li class="dropdown">
                        <a href="javascript:void(0)" class="dropbtn">
                            📊 Consultas Avançadas <i class="fas fa-caret-down"></i>
                        </a>
                        <div class="dropdown-content">
                            <a asp-controller="Admin" asp-action="ConsultaAvancada">👤 Usuários</a>
                            <a asp-controller="ConsultaSensor" asp-action="Index">🌡️ Sensores</a>
                        </div>
                    </li>
                    <li class="dropdown">
                        <a href="javascript:void(0)" class="dropbtn">
                            📊 Dashboards <i class="fas fa-caret-down"></i>
                        </a>
                        <div class="dropdown-content">
                            <a asp-controller="Dashboard" asp-action="Dashboard1">📈 Dashboard1</a>
                            <a asp-controller="Dashboard" asp-action="Dashboard2">📈 Dashboard2</a>
                        </div>
                    </li>
                    <li>
                        <a asp-controller="Sobre" asp-action="Index">
                            👤 Sobre
                        </a>
                    </li>
                </ul>
                <a asp-controller="Chamado" asp-action="Index" class="chamado">Abrir chamado</a>
            </nav>
        </header>
    }
    @section MainContentFullWidth {
        <section class="hero-section">
            <div class="hero">
                <h2>SEJA BEM VINDO</h2>
                <p>
                    A Magitech oferece as melhores soluções de sensores e ainda
                    possui dashboards e consultas avançadas interativas!
                </p>
                <div class="buttons">
                    <a href="#" class="about">Sobre nós</a>
                    <a asp-controller="Login" asp-action="LogOff" class="logoff">Log off</a>
                </div>
            </div>
        </section>
    }
</body>

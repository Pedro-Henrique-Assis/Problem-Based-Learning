@{
    ViewData["Title"] = "Gerenciamento de Usuários";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/consultaAvancada.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
}

@section MainContentFullWidth {
    <fieldset id="areaFiltro" class="form-group p-3 border rounded mb-4">
        <legend>@ViewData["Title"]</legend>
        <div class="row">
            <div class="col-lg-4">
                Nome do usuário<br />
                <input type="text" id="nome" class="form-control" placeholder="Digite o nome"/>
            </div>
            <div class="col-lg-4">
                Estado<br />
                <input type="text" id="estado" class="form-control" placeholder="Digite o estado"/>
            </div>
            <div class="col-lg-3">
                Sexo <br />
                <select id="sexoId" class="form-control" asp-items="@ViewBag.Sexos"></select>
            </div>
            <div class="col-lg-2">
                Data de nascimento <br />
                <input type="date" id="dataInicial" class="form-control" />
            </div>
            <div class="col-lg-2">
                <br />
                <input type="date" id="dataFinal" class="form-control" />
            </div>
            <div class="col-lg-4">
                Login do usuário<br />
                <input type="text" id="login" class="form-control" placeholder="Digite o login"/>
            </div>
            <div class="col-lg-1">
                <br />
                <input type="button" id="btnFiltro" class="btnFiltro" value="Aplicar"
                        onclick="aplicaFiltroConsultaAvancada()" />
            </div>
        </div>
    </fieldset>

    <div id="divMensagensAdmin" class="mb-3">
        @if (TempData["SucessoExcluir"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["SucessoExcluir"]
            </div>
        }
        @if (TempData["ErroExcluir"] != null)
        {
            <div class="alert alert-danger" role="alert">
                @TempData["ErroExcluir"]
            </div>
        }
    </div>

    <div id="resultadoConsulta" class="table-responsive"></div>
}

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
}

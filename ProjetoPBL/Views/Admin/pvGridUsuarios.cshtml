@model List<UsuarioViewModel>
<table class="table table-striped" id="tabelaUsuarios">
    <tr>
        <th>Nome</th>
        <th>Email</th>
        <th>Data de nascimento</th>
        <th>Sexo</th>
        <th>CEP</th>
        <th>Logradouro</th>
        <th>Número</th>
        <th>Cidade</th>
        <th>Estado</th>
        <th>Ações</th>
    </tr>
    @foreach (var usuario in Model)
    {
        <tr id="usuario-row-@usuario.Id">
            <td>@usuario.Nome</td>
            <td>@usuario.Email</td>
            <td>@usuario.DataNascimento.ToShortDateString()</td>
            <td>@usuario.NomeSexo</td>
            <td>@usuario.Cep</td>
            <td>@usuario.Logradouro</td>
            <td>@usuario.Numero</td>
            <td>@usuario.Cidade</td>
            <td>@usuario.Estado</td>
            <td>
                <a href="/Usuario/Edit/?id=@usuario.Id" class="btn btn-light btn-sm">
                    Editar
                </a>
                <button type="button" class="btn btn-danger btn-sm" onclick="confirmarExclusaoUsuario(@usuario.Id, '@usuario.Nome')">
                    Excluir
                </button>
            </td>
        </tr>
    }
</table>


@model List<ProjetoPBL.Models.SensorViewModel>

@{
    ViewData["Title"] = "Lista de Sensores";
}

<h2>Lista de Sensores</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Cadastrar Novo Sensor</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Local</th>
            <th>Valor</th>
            <th>Data de Instalação</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.nomeSensor</td>
                <td>@item.descricaoSensor</td>
                <td>@item.localInstalacao</td>
                <td>@item.valorInstalacao.ToString("C")</td>
                <td>@item.dataInstalacao.ToString("dd/MM/yyyy")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

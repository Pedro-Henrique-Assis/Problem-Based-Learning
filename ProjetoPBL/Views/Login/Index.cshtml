@{
    ViewData["Title"] = "Login";
}

<head>
    <meta charset="utf-8" />
    <title>Magitech</title>
    <link rel="stylesheet" href="/css/login.css" asp-append-version="true" />
</head>

<body>
    <div class="wrapper">
        <div class="title">Bem-vindo!</div>

        <form action="/login/Fazlogin" method="post">
            @if (ViewBag.Erro != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.Erro
                </div>
            }
            <div class="field">
                <input type="text" name="usuario" required />
                <label>Usuário</label>
            </div>

            <div class="field">
                <input type="password" name="senha" required />
                <label>Senha</label>
            </div>

            <div class="field">
                <input type="submit" value="Login" />
            </div>

            <div class="signup-link">
                Esqueceu sua senha? <a asp-controller="Usuario" asp-action="TrocaSenha">Trocar senha</a>
            </div>

            <div class="signup-link">
                Não possui conta? <a asp-controller="Usuario" asp-action="Create">Registre-se agora</a>
            </div>

        </form>
    </div>
</body>

@section Scripts {
    <script src="~/js/login.js" asp-append-version="true"></script>
}
